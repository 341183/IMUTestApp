<UserControl x:Class="IMUTestApp.Views.TestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:IMUTestApp.Converters">
    <UserControl.Resources>
        <!-- 测试结果样式 -->
        <Style x:Key="TestResultStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding TestResult}" Value="PASS">
                    <Setter Property="Background" Value="#FF28A745"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TestResult}" Value="NG">
                    <Setter Property="Background" Value="#FFDC3545"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TestResult}" Value="">
                    <Setter Property="Background" Value="#FF6C757D"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TestResult}" Value="{x:Null}">
                    <Setter Property="Background" Value="#FF6C757D"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 产品编码输入区 -->
        <Border Grid.Row="0" BorderBrush="#FFDDDDDD" BorderThickness="1" Padding="15" Margin="0,0,0,15" Background="#FFF8F9FA">
            <StackPanel>
                <TextBlock Text="产品编码" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <TextBox Text="{Binding ProductCode, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="14" 
                                 Padding="8" 
                                 Margin="0,0,10,0"
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="请输入或扫描产品编码" 
                                   FontSize="14" 
                                   Padding="8" 
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center"
                                   Foreground="Gray"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ProductCode}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ProductCode}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                    <Button Grid.Column="1" 
                            Content="清除" 
                            Command="{Binding ClearProductCodeCommand}"
                            Padding="10,8" 
                            MinWidth="60"
                            Background="#FF6C757D" 
                            Foreground="White" 
                            BorderThickness="0"/>
                </Grid>
                
                <!-- 操作提示 -->
                <TextBlock Text="💡 提示：编码输入完毕后将自动开始测试" 
                           FontSize="12" 
                           Foreground="#FF007BFF" 
                           Margin="0,8,0,0"
                           FontStyle="Italic"/>
            </StackPanel>
        </Border>
        
        <!-- 自动保存设置 -->
        <Border Grid.Row="1" BorderBrush="#FFDDDDDD" BorderThickness="1" Padding="15" Margin="0,0,0,15" Background="#FFF8F9FA">
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding AutoSaveEnabled}" 
                          VerticalAlignment="Center" 
                          Margin="0,0,10,0"/>
                <TextBlock Text="自动保存测试数据" 
                           FontWeight="Bold" 
                           FontSize="14" 
                           VerticalAlignment="Center"/>
                <TextBlock Text="（勾选后测试完成时自动保存数据到文件）" 
                           FontSize="12" 
                           Foreground="Gray" 
                           VerticalAlignment="Center" 
                           Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- 测试结果显示区 -->
        <Border Grid.Row="2" Style="{StaticResource TestResultStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="测试结果" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,5"/>
                    <TextBlock FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="White">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="等待测试"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TestResult}" Value="PASS">
                                        <Setter Property="Text" Value="PASS"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding TestResult}" Value="NG">
                                        <Setter Property="Text" Value="NG"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsTestRunning}" Value="True">
                                        <Setter Property="Text" Value="测试中..."/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding TestResultDetails}" 
                               FontSize="14" 
                               Foreground="White" 
                               TextAlignment="Right"
                               TextWrapping="Wrap"
                               MaxWidth="200"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 结果详情展示区 -->
        <Border Grid.Row="3" BorderBrush="#FFDDDDDD" BorderThickness="1" Padding="15" Margin="0,0,0,15" Background="#FFF8F9FA">
            <StackPanel>
                <TextBlock Text="测试详情" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="测试项目:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding TestItems}" TextWrapping="Wrap" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="测试标准:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding TestStandards}" TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="测试时间:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding TestDateTime}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="操作员:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Operator}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- 数据显示区 -->
        <Border Grid.Row="4" BorderBrush="#FFDDDDDD" BorderThickness="1">
            <ScrollViewer>
                <TextBox Text="{Binding DataDisplay, Mode=OneWay}" 
                       IsReadOnly="True" 
                       Background="White" 
                       BorderThickness="0" 
                       FontFamily="Consolas" 
                       FontSize="12" 
                       Padding="10"
                       TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>
        
        <!-- 状态栏 -->
        <WrapPanel Grid.Row="5" Orientation="Horizontal" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                <TextBlock Text="采样率: " FontWeight="Bold"/>
                <TextBlock Text="{Binding SampleRate}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                <TextBlock Text="数据包: " FontWeight="Bold"/>
                <TextBlock Text="{Binding PacketCount}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                <TextBlock Text="运行时间: " FontWeight="Bold"/>
                <TextBlock Text="{Binding RunTime}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="状态: " FontWeight="Bold"/>
                <TextBlock>
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="待机"/>
                            <Setter Property="Foreground" Value="Gray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsTestRunning}" Value="True">
                                    <Setter Property="Text" Value="测试中"/>
                                    <Setter Property="Foreground" Value="#FF007BFF"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TestResult}" Value="PASS">
                                    <Setter Property="Text" Value="测试完成"/>
                                    <Setter Property="Foreground" Value="#FF28A745"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TestResult}" Value="NG">
                                    <Setter Property="Text" Value="测试完成"/>
                                    <Setter Property="Foreground" Value="#FFDC3545"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </WrapPanel>
    </Grid>
</UserControl>