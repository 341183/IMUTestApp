<UserControl x:Class="IMUTestApp.Views.TestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 控制按钮区 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="开始测试" 
                    Command="{Binding StartTestCommand}"
                    Padding="15,8" 
                    Margin="0,0,10,0" 
                    Background="#FF28A745" 
                    Foreground="White" 
                    BorderThickness="0"/>
            <Button Content="停止测试" 
                    Command="{Binding StopTestCommand}"
                    Padding="15,8" 
                    Margin="0,0,10,0" 
                    Background="#FFDC3545" 
                    Foreground="White" 
                    BorderThickness="0"/>
            <Button Content="保存数据" 
                    Command="{Binding SaveDataCommand}"
                    Padding="15,8" 
                    Background="#FF007BFF" 
                    Foreground="White" 
                    BorderThickness="0"/>
        </StackPanel>
        
        <!-- 数据显示区 -->
        <Border Grid.Row="1" BorderBrush="#FFDDDDDD" BorderThickness="1">
            <ScrollViewer>
                <TextBox Text="{Binding DataDisplay, Mode=OneWay}" 
                       IsReadOnly="True" 
                       Background="White" 
                       BorderThickness="0" 
                       FontFamily="Consolas" 
                       FontSize="12" 
                       Padding="10"/>
            </ScrollViewer>
        </Border>
        
        <!-- 状态栏 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="采样率: " FontWeight="Bold"/>
            <TextBlock Text="{Binding SampleRate}" Margin="0,0,20,0"/>
            <TextBlock Text="数据包: " FontWeight="Bold"/>
            <TextBlock Text="{Binding PacketCount}" Margin="0,0,20,0"/>
            <TextBlock Text="运行时间: " FontWeight="Bold"/>
            <TextBlock Text="{Binding RunTime}"/>
        </StackPanel>
    </Grid>
</UserControl>