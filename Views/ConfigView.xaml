<UserControl x:Class="IMUTestApp.Views.ConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 配置选项 -->
        <StackPanel Grid.Row="0">
            <!-- 串口配置 -->
            <GroupBox Header="串口配置" Margin="0,0,0,15" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="端口:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" 
                              ItemsSource="{Binding AvailablePorts}"
                              SelectedItem="{Binding SelectedPort}"
                              Margin="0,0,20,0"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="波特率:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Row="0" Grid.Column="3"
                              ItemsSource="{Binding BaudRates}"
                              SelectedItem="{Binding SelectedBaudRate}"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="数据位:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" 
                              ItemsSource="{Binding DataBitsList}"
                              SelectedItem="{Binding SelectedDataBits}"
                              Margin="0,0,20,0"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="停止位:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Row="1" Grid.Column="3"
                              ItemsSource="{Binding StopBitsList}"
                              SelectedItem="{Binding SelectedStopBits}"/>
                </Grid>
            </GroupBox>
            
            <!-- IMU配置 -->
            <GroupBox Header="IMU配置" Margin="0,0,0,15" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="采样频率:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="1" 
                              ItemsSource="{Binding SampleFrequencies}"
                              SelectedIndex="1"
                              Margin="0,0,20,0"/>
                    
                    <TextBlock Grid.Column="2" Text="量程:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="3"
                              ItemsSource="{Binding Ranges}"
                              SelectedIndex="1"/>
                </Grid>
            </GroupBox>
        </StackPanel>
        
        <!-- 配置按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Content="连接设备" 
                    Command="{Binding ConnectCommand}"
                    Padding="15,8" 
                    Margin="0,0,10,0" 
                    Background="#FF28A745" 
                    Foreground="White" 
                    BorderThickness="0"/>
            <Button Content="断开连接" 
                    Command="{Binding DisconnectCommand}"
                    Padding="15,8" 
                    Margin="0,0,10,0" 
                    Background="#FFDC3545" 
                    Foreground="White" 
                    BorderThickness="0"/>
            <Button Content="刷新端口" 
                    Command="{Binding RefreshPortsCommand}"
                    Padding="15,8" 
                    Background="#FF6C757D" 
                    Foreground="White" 
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</UserControl>