<Window x:Class="IMUTestApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:IMUTestApp.Views"
        Title="IMU测试程序" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- 简单的按钮样式 -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFF0F0F0"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE0E0E0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFD0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 选中状态的按钮样式 -->
        <Style x:Key="ActiveNavButtonStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="#FF4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF4A90E2"/>
        </Style>
        
        <!-- 数据模板 -->
        <DataTemplate x:Key="TestViewTemplate">
            <views:TestView DataContext="{Binding TestViewModel}"/>
        </DataTemplate>
        
        <DataTemplate x:Key="ConfigViewTemplate">
            <views:ConfigView DataContext="{Binding ConfigViewModel}"/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- 侧边栏 -->
            <ColumnDefinition Width="180"/>
            <!-- 主内容区 -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左侧导航栏 -->
        <Border Grid.Column="0" Background="#FFF8F8F8" BorderBrush="#FFDDDDDD" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <!-- 程序标题 -->
                <TextBlock Text="IMU测试程序" 
                         FontSize="16" 
                         FontWeight="Bold" 
                         HorizontalAlignment="Center" 
                         Margin="0,10,0,20"/>
                
                <!-- 导航按钮 -->
                <Button Content="测试界面" 
                        Command="{Binding ShowTestViewCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
                
                <Button Content="配置界面" 
                        Command="{Binding ShowConfigViewCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
                
                <!-- 状态信息 -->
                <Border Background="White" 
                        BorderBrush="#FFDDDDDD" 
                        BorderThickness="1" 
                        Margin="0,30,0,0" 
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="设备状态" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding DeviceStatus}" Foreground="Red"/>
                        <TextBlock Text="数据状态" FontWeight="Bold" Margin="0,10,0,5"/>
                        <TextBlock Text="{Binding DataStatus}" Foreground="Gray"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- 主内容区域 -->
        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <!-- 标题栏 -->
                <RowDefinition Height="50"/>
                <!-- 内容区 -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 顶部标题栏 -->
            <Border Grid.Row="0" Background="#FFF5F5F5" BorderBrush="#FFDDDDDD" BorderThickness="0,0,0,1">
                <TextBlock Text="{Binding CurrentView}" 
                         FontSize="18" 
                         FontWeight="Bold" 
                         VerticalAlignment="Center" 
                         Margin="20,0"/>
            </Border>
            
            <!-- 内容显示区域 -->
            <ContentControl Grid.Row="1" Content="{Binding}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentView}" Value="Test">
                                <Setter Property="ContentTemplate" Value="{StaticResource TestViewTemplate}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentView}" Value="Config">
                                <Setter Property="ContentTemplate" Value="{StaticResource ConfigViewTemplate}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Grid>
    </Grid>
</Window>
