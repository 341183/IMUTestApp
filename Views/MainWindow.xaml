<Window x:Class="IMUTestApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:IMUTestApp.Views"
        Title="IMU测试程序" 
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- 导航按钮样式 -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="5,3"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE0E0E0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFD0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 数据模板 -->
        <DataTemplate x:Key="TestViewTemplate">
            <views:TestView DataContext="{Binding TestViewModel}"/>
        </DataTemplate>
        
        <DataTemplate x:Key="ConfigViewTemplate">
            <views:ConfigView DataContext="{Binding ConfigViewModel}"/>
        </DataTemplate>
        
        <DataTemplate x:Key="SettingsViewTemplate">
            <views:SettingsView DataContext="{Binding SettingsViewModel}"/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160" MinWidth="140" MaxWidth="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左侧导航栏 -->
        <Border Grid.Column="0" Background="#FFF8F8F8" BorderBrush="#FFDDDDDD" BorderThickness="0,0,1,0">
            <StackPanel Margin="8">
                <!-- 程序标题 -->
                <TextBlock Text="IMU测试程序" 
                         FontSize="14" 
                         FontWeight="Bold" 
                         HorizontalAlignment="Center" 
                         Margin="0,8,0,15"
                         TextWrapping="Wrap"/>
                
                <!-- 导航按钮 -->
                <Button Content="测试" 
                        Command="{Binding ShowTestViewCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
                
                <Button Content="配置" 
                        Command="{Binding ShowConfigViewCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
                        
                <Button Content="设置" 
                        Command="{Binding ShowSettingsViewCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
                
                <!-- 状态信息 -->
                <Border Background="White" 
                        BorderBrush="#FFDDDDDD" 
                        BorderThickness="1" 
                        Margin="0,20,0,0" 
                        Padding="8">
                    <StackPanel>
                        <TextBlock Text="连接状态" 
                                 FontWeight="Bold" 
                                 FontSize="12"
                                 Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding DeviceStatus}" 
                                 Foreground="Red" 
                                 FontSize="11"
                                 TextWrapping="Wrap"/>
                        <TextBlock Text="数据状态" 
                                 FontWeight="Bold" 
                                 FontSize="12"
                                 Margin="0,8,0,4"/>
                        <TextBlock Text="{Binding DataStatus}" 
                                 Foreground="Gray" 
                                 FontSize="11"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- 主内容区域 -->
        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 顶部标题栏 -->
            <Border Grid.Row="0" Background="#FFF5F5F5" BorderBrush="#FFDDDDDD" BorderThickness="0,0,0,1">
                <TextBlock x:Name="PageTitleText" 
                         FontSize="16" 
                         FontWeight="Bold" 
                         VerticalAlignment="Center" 
                         Margin="20,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Test">
                                    <Setter Property="Text" Value="数据采集与测试"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Config">
                                    <Setter Property="Text" Value="设备配置管理"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Settings">
                                    <Setter Property="Text" Value="系统设置"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
            
            <!-- 内容显示区域 -->
            <ContentControl Grid.Row="1" Content="{Binding}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentView}" Value="Test">
                                <Setter Property="ContentTemplate" Value="{StaticResource TestViewTemplate}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentView}" Value="Config">
                                <Setter Property="ContentTemplate" Value="{StaticResource ConfigViewTemplate}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentView}" Value="Settings">
                                <Setter Property="ContentTemplate" Value="{StaticResource SettingsViewTemplate}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Grid>
    </Grid>
</Window>
